dvmc_usage() {
  if [[ -n $long_usage ]]; then
    printf "dvmc - Command line tool to perform dynamical variationnal Monte Carlo calculations\n"
    echo

  else
    printf "dvmc - Command line tool to perform dynamical variationnal Monte Carlo calculations\n"
    echo

  fi

  printf "%s\n" "$(bold "Usage:")"
  printf "  dvmc COMMAND\n"
  printf "  dvmc [COMMAND] --help | -h\n"
  printf "  dvmc --version | -v\n"
  echo

  printf "%s\n" "$(bold "Commands:")"
  printf "  %s   Generates configuration files needed based on a global parameters input.\n" "$(green "generate")      "
  printf "  %s   Evaluates the ground state using 'namelist.def' to access configuration files.\n" "$(green "groundstate")   "
  printf "  %s   Proceeds to dynamical calculations via optimized parameters.\n" "$(green "excitations")   "
  printf "  %s   Merges binary output files based on given prefix.\n" "$(green "process-output")"
  printf "  %s   Computes the Green's function using Q-matrix representation.\n" "$(green "qmatrix")       "
  printf "  %s   Runs all of the simulation's commands at once.\n" "$(green "run")           "
  printf "  %s   Cleans directory by removing generated configuration/output files.\n" "$(green "clean")         "
  echo

  if [[ -n $long_usage ]]; then
    printf "%s\n" "$(bold "Options:")"

    printf "  %s\n" "$(magenta "--help, -h")"
    printf "    Show this help\n"
    echo
    printf "  %s\n" "$(magenta "--version, -v")"
    printf "    Show version number\n"
    echo

    printf "%s\n" "$(bold "Environment Variables:")"

    printf "  %s\n" "$(cyan "DVMC_SCRIPTS_LOCATION")"
    printf "    Sets the default directory in which dVMC tools are located\n"
    printf "    Default: $HOME/.local/share/dvmc\n"
    echo

    printf "  %s\n" "$(cyan "DVMC_MPI_PROC")"
    printf "    Sets the number of processors (CPUS) to use within the MPI call.\n"
    printf "    Default: 1\n"
    echo

  fi
}

