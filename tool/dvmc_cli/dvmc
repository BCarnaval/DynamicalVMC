dvmc_qmatrix_parse_requirements() {

  while [[ $# -gt 0 ]]; do
    case "${1:-}" in
      --help | -h)
        long_usage=yes
        dvmc_qmatrix_usage
        exit
        ;;

      *)
        break
        ;;

    esac
  done

  action="qmatrix"

  while [[ $# -gt 0 ]]; do
    key="$1"
    case "$key" in

      --tolerance)

        if [[ -n ${2+x} ]]; then

          args['--tolerance']="$2"
          shift
          shift
        else
          printf "%s\n" "--tolerance requires an argument: --tolerance TOLERANCE" >&2
          exit 1
        fi
        ;;

      --use_filter)

        if [[ -n ${2+x} ]]; then

          args['--use_filter']="$2"
          shift
          shift
        else
          printf "%s\n" "--use_filter requires an argument: --use_filter USE_FILTER" >&2
          exit 1
        fi
        ;;

      --addtl_filter)

        if [[ -n ${2+x} ]]; then

          args['--addtl_filter']="$2"
          shift
          shift
        else
          printf "%s\n" "--addtl_filter requires an argument: --addtl_filter FILTER_VALUE" >&2
          exit 1
        fi
        ;;

      --k_tolerance)

        if [[ -n ${2+x} ]]; then

          args['--k_tolerance']="$2"
          shift
          shift
        else
          printf "%s\n" "--k_tolerance requires an argument: --k_tolerance K_TOLERANCE" >&2
          exit 1
        fi
        ;;

      -?*)
        printf "invalid option: %s\n" "$key" >&2
        exit 1
        ;;

      *)

        if [[ -z ${args['processing']+x} ]]; then

          args['processing']=$1
          shift
        else
          printf "invalid argument: %s\n" "$key" >&2
          exit 1
        fi

        ;;

    esac
  done

  if [[ -z ${args['processing']+x} ]]; then
    printf "missing required argument: PROCESSING\nusage: dvmc qmatrix PROCESSING [OPTIONS]\n" >&2
    exit 1
  fi

}

dvmc_run_parse_requirements() {

  while [[ $# -gt 0 ]]; do
    case "${1:-}" in
      --help | -h)
        long_usage=yes
        dvmc_run_usage
        exit
        ;;

      *)
        break
        ;;

    esac
  done

  action="run"

  while [[ $# -gt 0 ]]; do
    key="$1"
    case "$key" in

      --tolerance)

        if [[ -n ${2+x} ]]; then

          args['--tolerance']="$2"
          shift
          shift
        else
          printf "%s\n" "--tolerance requires an argument: --tolerance TOLERANCE" >&2
          exit 1
        fi
        ;;

      --use_filter)

        if [[ -n ${2+x} ]]; then

          args['--use_filter']="$2"
          shift
          shift
        else
          printf "%s\n" "--use_filter requires an argument: --use_filter USE_FILTER" >&2
          exit 1
        fi
        ;;

      --addtl_filter)

        if [[ -n ${2+x} ]]; then

          args['--addtl_filter']="$2"
          shift
          shift
        else
          printf "%s\n" "--addtl_filter requires an argument: --addtl_filter FILTER_VALUE" >&2
          exit 1
        fi
        ;;

      --k_tolerance)

        if [[ -n ${2+x} ]]; then

          args['--k_tolerance']="$2"
          shift
          shift
        else
          printf "%s\n" "--k_tolerance requires an argument: --k_tolerance K_TOLERANCE" >&2
          exit 1
        fi
        ;;

      -?*)
        printf "invalid option: %s\n" "$key" >&2
        exit 1
        ;;

      *)

        if [[ -z ${args['parameters_file']+x} ]]; then

          args['parameters_file']=$1
          shift
        elif [[ -z ${args['processing']+x} ]]; then

          args['processing']=$1
          shift
        else
          printf "invalid argument: %s\n" "$key" >&2
          exit 1
        fi

        ;;

    esac
  done

  if [[ -z ${args['parameters_file']+x} ]]; then
    printf "missing required argument: PARAMETERS_FILE\nusage: dvmc run PARAMETERS_FILE PROCESSING [OPTIONS]\n" >&2
    exit 1
  fi
  if [[ -z ${args['processing']+x} ]]; then
    printf "missing required argument: PROCESSING\nusage: dvmc run PARAMETERS_FILE PROCESSING [OPTIONS]\n" >&2
    exit 1
  fi

}

dvmc_clean_parse_requirements() {

  while [[ $# -gt 0 ]]; do
    case "${1:-}" in
      --help | -h)
        long_usage=yes
        dvmc_clean_usage
        exit
        ;;

      *)
        break
        ;;

    esac
  done

  action="clean"

  while [[ $# -gt 0 ]]; do
    key="$1"
    case "$key" in

      --deep | -d)

        args['--deep']=1
        shift
        ;;

      -?*)
        printf "invalid option: %s\n" "$key" >&2
        exit 1
        ;;

      *)

        if [[ -z ${args['spare']+x} ]]; then

          args['spare']=$1
          shift
        else
          printf "invalid argument: %s\n" "$key" >&2
          exit 1
        fi

        ;;

    esac
  done

}

initialize() {
  version="0.1.0"
  long_usage=''
  set -e

  export DVMC_SCRIPTS_LOCATION="${DVMC_SCRIPTS_LOCATION:-$HOME/.local/share/dvmc}"
  export DVMC_MPI_PROC="${DVMC_MPI_PROC:-1}"

}

run() {
  declare -A args=()
  declare -A deps=()
  declare -a other_args=()
  declare -a input=()
  normalize_input "$@"
  parse_requirements "${input[@]}"

  case "$action" in
    "generate") dvmc_generate_command ;;
    "groundstate") dvmc_groundstate_command ;;
    "excitations") dvmc_excitations_command ;;
    "process-output") dvmc_process_output_command ;;
    "qmatrix") dvmc_qmatrix_command ;;
    "run") dvmc_run_command ;;
    "clean") dvmc_clean_command ;;
  esac
}

initialize
run "$@"
