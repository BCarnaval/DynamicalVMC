        ;;

      *)
        break
        ;;

    esac
  done

  action="groundstate"

  while [[ $# -gt 0 ]]; do
    key="$1"
    case "$key" in

      --optimized | -o)

        args['--optimized']=1
        shift
        ;;

      -?*)
        printf "invalid option: %s\n" "$key" >&2
        exit 1
        ;;

      *)

        printf "invalid argument: %s\n" "$key" >&2
        exit 1

        ;;

    esac
  done

}

